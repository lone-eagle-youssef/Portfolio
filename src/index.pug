    #about.about(class="w-100 py-3 d-flex flex-column")
      .main-title(class="d-flex flex-column align-items-center")
        h2 About Me
        p My introduction
      .container(class="d-flex flex-column align-items-center py-5 ")
        .content(class="pb-5 col-6").
          Web developer, with extensive knowledge and years of experience, working in web technologies and UI / UX design delivering quality work.
        .r-side(class="col-6 text-center")
          ul.analysis(class="ps-0 py-4 d-flex flex-wrap gap-4 justify-content-center justify-content-md-between")
            li(class="d-flex flex-column align-items-center")
              .num 03+
              .text(class="d-flex flex-column align-items-center")
                span Years 
                span experience
            li(class="d-flex flex-column align-items-center")
              .num 13+
              .text(class="d-flex flex-column align-items-center")
                span Completed
                span projects
            li(class="d-flex flex-column align-items-center")
              .num 04+
              .text(class="d-flex flex-column align-items-center")
                span Companies
                span worked
          .cv(class="py-4")
            a.btn(class="rounded-pill px-4", href="media/cv.pdf", download)
              | Download CV
              i(class="uil uil-download-alt ps-2")
    #skills.skills
      .main-title(class="d-flex flex-column align-items-center")
        h2 My Skills
        p Front End Developer
      .container
        ul.skill-analysis(class="p-0")
          each skill in skills
            li
              .name
                span=skill[0]
                span=skill[1] + "%"
              .myrow
                span(style="width: 0;" ,data-width=skill[1] + "%")
    #sevices.services(class="w-100 py-4 d-flex flex-column")
      .main-title(class="d-flex flex-column align-items-center")
        h2 Services
        p What I offer
      .container
        .cards(class="d-flex gap-3 flex-md-row flex-column")
          .card(class="col-md-4")
            .card-body(class="ps-4")
              .card-icon(class="mt-5 py-3")
                i(class="uil uil-tachometer-fast-alt")
              h5.card-title Performance
              ul.card-text.performance-text
                .card-text-title(class="d-flex align-items-center justify-content-between")
                  h5 Performance
                  i(class="uil uil-times fs-4", data-close="performance")
                each txt in performanceList
                  li(class="d-flex align-items-center gap-2 py-2")
                    i(class="uil uil-check-circle")
                    p(class="d-flex align-items-center justify-content-center m-0")= txt
              a.card-more(class="ps-0 btn d-flex align-items-center", data-open="performance")
                | View More
                i(class="ps-2 fa-solid fa-arrow-right-long")
          .card(class="col-md-4")
            .card-body(class="ps-4")
              .card-icon(class="mt-5 py-3")
                i(class="fa-solid fa-code")
              h5.card-title Coding
              ul.card-text.coding-text
                .card-text-title(class="d-flex align-items-center justify-content-between")
                  h5 Coding
                  i(class="uil uil-times fs-4", data-close="coding")
                each txt in codingList
                  li(class="d-flex align-items-center gap-2 py-2")
                    i(class="uil uil-check-circle")
                    p(class="d-flex align-items-center justify-content-center m-0")= txt
              a.card-more(class="ps-0 btn d-flex align-items-center", data-open="coding")
                | View More
                i(class="ps-2 fa-solid fa-arrow-right-long")
          .card(class="col-md-4")
            .card-body(class="ps-4")
              .card-icon(class="mt-5 py-3")
                i(class="fa-solid fa-truck-fast")
              h5.card-title Delivery
              ul.card-text.delivery-text
                .card-text-title(class="d-flex align-items-center justify-content-between")
                  h5 Delivery
                  i(class="uil uil-times fs-4", data-close="delivery")
                each txt in deliveryList
                  li(class="d-flex align-items-center gap-2 py-2")
                    i(class="uil uil-check-circle")
                    p(class="d-flex align-items-center justify-content-center m-0")= txt
              a.card-more(class="ps-0 btn d-flex align-items-center", data-open="delivery")
                | View More
                i(class="ps-2 fa-solid fa-arrow-right-long")

